---
title: Welcome to Middleman
---

<div class="container">

    <div class="video-list">
        <% blog('videos').articles[0...5].each do |article| %>
            <div class="video-list-item">
                <h3><a href="<%= article.url  %>"><%= article.title %></a></h3>
                <%= image_tag(article.data.image) %>
                <p><%= article.data.introtext %></p>
                <ol>
                  <% article.tags.each do |tag, articles| %>
                    <li><%= link_to "#{tag}", tag_path(tag, 'videos') %></li>
                  <% end %>
                </ol>

                <%= link_to("Read more", article.url) %>
            </div>
        <% end %>
    </div>

    <h2>Tags</h2>
    <ol>
      <% blog('videos').tags.each do |tag, articles| %>
        <li><%= link_to "#{tag} (#{articles.size})", tag_path(tag, 'videos') %></li>
      <% end %>
    </ol>
    <br>

    <div class="clearfix">
      <h2>Friends</h2>
      <% data.people.friends.each do |friend| %>
        <%= friend %>
        <br>
      <% end %>
    </div>

    <div class="clearfix">
      <h2>Movies</h2>
      <% data.movies.movies.each do |movie| %>
      <ul>
        <li>Title: <%= movie.title%></li>
        <li>Director: <%= movie.director%></li>
        <li>Actors: <%= movie.actors%></li>
        <li><img src='<%= movie.poster%>'></li>
      </ul>
      <% end %>
    </div>



</div>
